<%- include('header'); -%>
  <div class="box" id="heading">
    <h1><%= listTitle %></h1>

  </div>

  <div class="box">

    <% var lengthVar = newListItem.length; %>
    <% for( i=0; i < lengthVar; i++){ %>
    <div class="item">
      <input type="checkbox">
      <p> <%= newListItem[i] %></p>
    </div>
    <%}%>

    <form  class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" autofocus>
      <button type="submit" name="list" value=<%= listTitle %>>+</button>
    </form>
  </div>
<%- include('footer'); -%>
